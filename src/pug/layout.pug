include mixins/_header

doctype html
html
  head
    title= `${title} | Projects Overview`
    link( rel="shortcut icon" type="image/png" href="img/favicon.png" )
    link( href="https://fonts.googleapis.com/css?family=Open+Sans|Raleway"  rel="stylesheet")
    block styles

  body
    +header
          
    #content
      block flashes
        if locals.flashes
          - const categories = Object.keys(locals.flashes)
            each category in categories
              each message in flashes[category]
                .flash( class=`-${category}` onClick="this.remove()" )
                  p.flash__text!= message
      #inner
        block content
    
    #footer
      hr.footer-hr
      div.links
        a.footer-link( href="help" ) Help
        a.footer-link( href="https://github.com/jneidel/projects-overview/issues/new?assignee=jneidel&body=%3C!--%20Attach%20a%20screenshot%20where%20applicable%20--%3E%0A%23%23%23%20Expected%20Behavior%0A%0A%23%23%23%20Actual%20Behavior" target="blank" ) Send Feedback
        a.footer-link( href="https://github.com/jneidel/projects-overview" ) Source

    block scripts

    style.
      html {
        box-sizing: border-box;
      }
      *:not( img ), *:before, *:after {
        box-sizing: inherit;
      }
